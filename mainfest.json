{
    "name": "Referrably",
    "description": "Offers job referral suggestions based on LinkedIn connections.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_title": "Referrably",
      "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
      }
    ]
  }
  